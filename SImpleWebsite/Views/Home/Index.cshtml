@{
    ViewData["Title"] = "Songs Table Page";
}


@section Scripts {

}
<div ng-app="app-site" ng-controller="controller">


    <div class="text-center">
        <h1 class="display-4">{{title}}</h1>
    </div>
    <br />
    <div ng-if="mode == 'table'">

        <div>
            <button class="btn btn-success float-end" ng-click="create()">Add</button>
        </div>
        <br />
        <table class="table table-bordered">
            <tr>
                <th style="min-width: 50px;">ID</th>
                <th style="min-width: 120px;">Title</th>
                <th style="min-width: 300px;">Description</th>
                <th style="min-width: 150px;">Action</th>
            </tr>
            <tr ng-repeat="song in songs">
                <td>{{song.id}}</td>
                <td>{{song.title}}</td>
                <td>{{song.description}}</td>
                <td>
                    <button class="btn btn-primary" ng-click="edit(song)" data-toggle="modal" data-target="#editmodal">Edit</button>
                    <button class="btn btn-danger" ng-click="delete(song)">Delete</button>
                </td>
            </tr>
        </table>


    </div>

    <div ng-if="mode == 'add'">
        <label>Title : </label>
        <input type="text" class="form-control" ng-model="addmodel.title" />
        <br/>
        <label>Lyrics : </label>
        <textarea class="form-control" ng-model="addmodel.description"></textarea>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" ng-click="add(addmodel)">Save</button>
        </div>
    </div>

    <div ng-if="mode == 'edit'">
        <input type="text" class="form-control" ng-model="editmodel.title" />

        <input type="text" class="form-control" ng-model="editmodel.description" />

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" ng-click="update(editmodel)">Save</button>
        </div>
    </div>

</div>
